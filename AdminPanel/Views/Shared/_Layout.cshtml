                        <li>
                            <a href="#" data-toggle="control-sidebar"><i class="fa fa-cogs"></i></a>
                        </li>
                    </ul>
                </div>
            </nav>
        </header>
        <!-- Left side column. contains the logo and sidebar -->
        <aside class="main-sidebar">
            <!-- sidebar: style can be found in sidebar.less -->
            <section class="sidebar">
                <!-- Sidebar user panel -->
                @if (SignInManager.IsSignedIn(User))
                {
                    <div class="user-panel">
                        <div class="pull-left image">
                            <img src="~/AdminTheme/img/user2-160x160.jpg" class="img-circle" alt="User Image">
                        </div>
                        <div class="pull-left info">
                            <p>@UserManager.GetUserAsync(User).Result.Name</p>
                            <p><small>@UserManager.GetUserAsync(User).Result.Email.ToLower()</small></p>
                        </div>
                    </div>
                }

                <!-- sidebar menu: : style can be found in sidebar.less -->

                @await Component.InvokeAsync("MenuNavigator")
                <vc:MenuNavigator></vc:MenuNavigator>

            </section>
            <!-- /.sidebar -->
        </aside>
        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            @RenderBody() <!-- Handle each AdminLTE page in a razor view -->
            <div>@ViewData["DebugMessage"]</div>
        </div>
        <!-- /.content-wrapper -->
        <footer class="main-footer">
            <div class="pull-right hidden-xs">
                <b>Version</b> 1.0.0
            </div>
            <strong>Copyright &copy; 2017 <a href="#">Luigi Carlone</a></strong>
        </footer>
        <!-- Control Sidebar -->
        <aside class="control-sidebar control-sidebar-dark">
